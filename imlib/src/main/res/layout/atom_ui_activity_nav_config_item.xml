<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:background="@color/atom_ui_light_gray"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_config_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/atom_ui_text_size_micro" />

        <TextView
            android:id="@+id/nav_config_item_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2" />

    </LinearLayout>


    <com.qunar.im.ui.view.IconView
        android:id="@+id/nav_config_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/atom_ui_text_size_larger"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/atom_ui_file_sys_cost"
        android:text="@string/atom_ui_new_info"/>

    <com.qunar.im.ui.view.IconView
        android:id="@+id/nav_config_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/atom_ui_text_size_larger"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/atom_ui_button_primary_gray_red"
        android:text="@string/atom_ui_new_delete"/>

